<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" stylesheets="@/css/clienteStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientesController">
   <top>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Título e botão-->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="section-title" text="Clientes">
               <font>
                  <Font name="Arial Black" size="15.0" />
               </font></Label>
                <Pane maxWidth="100.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                 <ComboBox fx:id="comboFiltro" prefHeight="25.0" prefWidth="85.0">
                     <items>
                         <FXCollections fx:factory="observableArrayList">
                             <String fx:value="Nome" />
                             <String fx:value="CPF" />
                             <String fx:value="Email" />
                             <String fx:value="Telefone" />
                             <String fx:value="Status" />
                         </FXCollections>
                     </items>
                 </ComboBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="campoPesquisa" promptText="Pesquisar cliente..." />
               <Button fx:id="btnPesquisa" mnemonicParsing="false" onAction="#pesquisar" text="alou" textAlignment="CENTER">
                  <HBox.margin>
                     <Insets left="-5.0" />
                  </HBox.margin>
                  <font>
                     <Font size="10.0" />
                  </font>
               </Button>
                </HBox>
                <Button fx:id="NovoCliente" onAction="#abrirNovoClienteModal" styleClass="primary-button" text="➕ Novo Cliente">
               <HBox.margin>
                  <Insets left="250.0" />
               </HBox.margin></Button>
            </HBox>

            <!-- Tabela de Clientes-->
            <TableView fx:id="tabelaClientes" prefHeight="400" prefWidth="800.0">
                <columns>
               <TableColumn fx:id="colunaId" prefWidth="60.0" text="id" />
                    <TableColumn fx:id="colunaNome" prefWidth="200" text="Nome" />
                    <TableColumn fx:id="colunaEmail" prefWidth="240" text="E-mail" />
                    <TableColumn fx:id="colunaTelefone" prefWidth="120" text="Telefone" />
                    <TableColumn fx:id="colunaStatus" prefWidth="120" text="Status" />
                    <TableColumn fx:id="colunaAcoes" prefWidth="100" text="Ações" />
                </columns>
            </TableView>
        </VBox>
   </top>
</BorderPane>
